<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rjt.groceryapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pine_icon"
        android:label="Fresh Market"
        android:roundIcon="@mipmap/pine_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.ConfirmationActivity"></activity>
        <activity android:name=".activities.CheckoutActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.ProductDetailActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.SubCategoryActivity" />
        <activity android:name=".activities.CategoryActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.LoginActivity" />
    </application>

</manifest>